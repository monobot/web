{% extends "commons/base.j2" %}

{% block styles %}
<link rel="stylesheet" href="{{ mybase_dir }}/ticket.css">
{% endblock %}

{% block content %}

<h1>{{ event.name }}</h1>

<table>
    <tr>
        <td class="field">
            <i class="fas fa-user"></i>
            ASISTENTE
        </td>
        <td>
            {{ ticket.customer_surname }}, {{ ticket.customer_name }}
            <br>
            <i class="far fa-envelope"></i>
            {{ ticket.customer_email }}
        </td>
    </tr>
    <tr>
        <td class="field">
            <i class="far fa-calendar-alt"></i>
            FECHA
        </td>
        <td>
            {{ event.start_date.strftime("%d/%m/%Y") }}
        </td>
    </tr>
    <tr>
        <td class="field">
            <i class="far fa-clock"></i>
            HORA
        </td>
        <td>
            9:00h
        </td>
    </tr>
    <tr>
        <td class="field">
            <i class="far fa-clone"></i>
            TIPO DE ENTRADA
        </td>
        <td>
            {{ ticket.article.category.name }}
        </td>
    </tr>
    <tr>
        <td class="field">
            <i class="fas fa-euro-sign"></i>
            PRECIO DE LA ENTRADA
        </td>
        <td>{{ ticket.article.price }} €</td>
    </tr>

    <tr>
        <td class="field">
            <i class="far fa-bookmark"></i> FECHA DE COMPRA</td>
        <td>{{ ticket.sold_at.strftime("%d/%m/%Y @ %H:%Mh") }}</td>
    </tr>

    <tr>
        <td class="field">
            <i class="fas fa-map-marker-alt"></i>
            LOCALIZACIÓN
        </td>
        <td>
            Edificio de Física y Matemáticas (ULL)
            <div class="address">
                C/ Astrofísico Francisco Sánchez s/n
                San Cristóbal de La Laguna, S.C. de Tenerife 38206 España
            </div>
        </td>
    </tr>


</table>

<div class="qr">
    {{ qr_code }}
    <br> <code> {{ ticket.keycode }}</code>
</div>

{% endblock %}
